<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog</title>
  <link rel="stylesheet" href="/css/styles.css">
  
</head>
<body>
  <%- include('partials/header') %>
  <h1>Blog Posts</h1>
  <div class="post-grid">
    <% posts.forEach((post, index) => { %>
      <div class="post-card">
        <h2><%= post.title %></h2>
        <img src="<%= post.imageUrl %>" alt="<%= post.title %> image">
        
        <p><strong>Description:</strong></p><p> <%= post.description %></p>
        
        <div class="post-actions">
          <a href="/edit/<%= index %>" class="button">Edit</a>
          <form action="/delete/<%= index%>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
  <a href="/new" class="button ">New Post</a>
</body>
</html>
